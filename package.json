{
  "name": "clean-node-api",
  "version": "2.5.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig-build.json",
    "postbuild": "copyfiles -u -1 public/**/* dist/static",
    "lint": "eslint 'src/**' --fix",
    "dev": "sucrase-node src/main/server.ts",
    "debug": "nodemon --watch ./dist --inspect --nolazy dist/main/server.js",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:clear": "jest --passWithNoTests --noStackTrace --runInBand --clearCache",
    "test:dev": "jest --passWithNoTests -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- --watch --noStackTrace -c jest-unit-config.js",
    "test:integration": "npm test -- -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests ./src",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "author": "Guilherme Alexandre Rocha Pereira",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@shelf/jest-mongodb": "^3.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.3",
    "@types/jest": "^28.1.8",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^18.7.13",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "bson-objectid": "^2.0.4",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "sucrase": "^3.25.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^4.9.1",
    "nodemon": "^2.0.20",
    "swagger-ui-express": "^4.5.0",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "14.17.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
