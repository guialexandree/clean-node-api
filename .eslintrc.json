{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard-with-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "@typescript-eslint/strict-boolean-expressions": "off",
		"no-tabs": "off",
		"indent": "off",
		"no-useless-constructor": "off"
  }
}
